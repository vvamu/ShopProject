                        }
                        else
                        {
                            <img class="card-img-top img-fluid" src="@Url.Action("GetImage", "Collection" , new {collectionId = collection.Id})" data-width="1000" data-height="667" alt="UIkit cards" />
                        }
                                                                                                                                                                                                                  
                    </div>
                    <div class="uk-card-body">
